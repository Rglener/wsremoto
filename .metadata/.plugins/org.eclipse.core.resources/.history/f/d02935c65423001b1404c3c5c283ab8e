package decisao;

import javax.swing.JOptionPane;

public class DesafioSimples {

	public static void main(String[] args) {
		/*
		 * Capturar: o nome e a idade
		 * Idade maior que 70, 16 ou 17 ele é facultativo
		 * Idade estiver entre 18 e 70 é obrigatório
		 * Idade for menor que 16 não pode voltar
		 */
		 
		String nome = JOptionPane.showInputDialog("Eleitor").toUpperCase();
		float idade = Float.parseFloat(JOptionPane.showInputDialog("idade"));		
			

		if (idade > 70 || idade == 16 || idade == 17 ) {			
			System.out.println( nome +  " seu voto é facultativo ");
		}
		
		if (idade >= 18 && idade <= 70) {
			System.out.println(nome + " seu voto é obrigatório");
		}
	    	
		if (idade < 16) {
			System.out.println(nome + " você não pode votar");
			
		}
		    	
		    		
		

	}

}
